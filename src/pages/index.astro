    <!-- Phase indicators -->
    <div class="absolute bottom-3 left-1/2 -translate-x-1/2 z-20 flex items-center gap-1">
      {[0,1,2,3].map((i) => (
        <button
          class="vb-dot-btn flex items-center justify-center h-11 cursor-pointer"
          data-vb-dot={i}
          aria-label={`Phase ${i + 1}`}
        >
          <span
            class:list={[
              'vb-dot block h-1 sm:h-[2px] rounded-full transition-all duration-700',
              i === 0 ? 'bg-accent-500 w-12' : 'bg-white/25 w-8',
            ]}
            data-vb-dot-inner={i}
          />
        </button>
      ))}
    </div>
  </div>

  <script>
    // 4-Phase Video Breaker — kein Loop, Video laeuft durch und blendet zum naechsten ueber
    const vbVideos = document.querySelectorAll<HTMLVideoElement>('.vb-video');
    const vbTexts = document.querySelectorAll<HTMLElement>('.vb-text');
    const vbDots = document.querySelectorAll<HTMLElement>('[data-vb-dot-inner]');
    let vbCurrent = 0;
    let vbTransitioning = false;
    let vbTriggered = false;
    const crossfadeSec = 2.5;
    const startOffsets = [0, 0, 0, 0]; // Alle Clips starten bei 0

    function vbGoTo(index: number) {
      if (vbTransitioning || index === vbCurrent) return;
      vbTransitioning = true;
      vbTriggered = false;

      // Fade out current video
      vbVideos[vbCurrent].style.opacity = '0';
      vbDots[vbCurrent]?.classList.remove('bg-accent-500', 'w-12');
      vbDots[vbCurrent]?.classList.add('bg-white/25', 'w-8');

      // Start new video at its offset
      const newVideo = vbVideos[index];
      newVideo.currentTime = startOffsets[index] || 0;
      newVideo.play().catch(() => {});

      // Fade in new video
      newVideo.style.opacity = '1';
      vbDots[index]?.classList.remove('bg-white/25', 'w-8');
      vbDots[index]?.classList.add('bg-accent-500', 'w-12');

      // Text wechselt SOFORT beim Video-Uebergang
      const oldTextIdx = vbCurrent;
      vbTexts[oldTextIdx].style.opacity = '0'; // alter Text sofort weg
      setTimeout(() => {
        vbTexts[index].style.opacity = '1'; // neuer Text nach 600ms (alter ist dann verschwunden)
      }, 600);

      const oldIdx = vbCurrent;
      vbCurrent = index;

      setTimeout(() => {
        vbVideos[oldIdx].pause();
        vbTransitioning = false;
      }, crossfadeSec * 1000);
    }

    function vbNext() {
      const nextIndex = (vbCurrent + 1) % vbVideos.length;

      // Letztes Video: smooth ausblenden, Pause, dann von vorne
      if (nextIndex === 0) {
        if (vbTransitioning) return;
        vbTransitioning = true;
        vbTriggered = false;

        // Alles ausblenden (Video + Text)
        vbVideos[vbCurrent].style.opacity = '0';
        vbTexts[vbCurrent].style.opacity = '0';
        vbDots[vbCurrent]?.classList.remove('bg-accent-500', 'w-12');
        vbDots[vbCurrent]?.classList.add('bg-white/25', 'w-8');

        const oldIdx = vbCurrent;

        // Nach Fade-Out: kurze Schwarzpause, dann Phase 0 starten
        setTimeout(() => {
          vbVideos[oldIdx].pause();

          // Phase 0 vorbereiten (noch unsichtbar)
          const firstVideo = vbVideos[0];
          firstVideo.currentTime = 0;
          firstVideo.play().catch(() => {});

          // Kurze Pause im Schwarzen
          setTimeout(() => {
            firstVideo.style.opacity = '1';
            vbDots[0]?.classList.remove('bg-white/25', 'w-8');
            vbDots[0]?.classList.add('bg-accent-500', 'w-12');

            setTimeout(() => {
              vbTexts[0].style.opacity = '1';
            }, 600);

            vbCurrent = 0;
            vbTransitioning = false;
          }, 800); // 800ms Schwarzpause
        }, crossfadeSec * 1000);

        return;
      }

      vbGoTo(nextIndex);
    }

    // CSS transitions
    vbVideos.forEach(v => {
      v.style.transition = `opacity ${crossfadeSec}s ease-in-out`;
    });

    // Wenn ein Video endet: sofort zum naechsten (Fallback)
    vbVideos.forEach((v, i) => {
      v.addEventListener('ended', () => {
        if (i === vbCurrent && !vbTransitioning) vbNext();
      });
    });

    // Crossfade startet bevor das Video endet (breites Zeitfenster)
    vbVideos.forEach((v, i) => {
      v.addEventListener('timeupdate', () => {
        if (i !== vbCurrent || vbTransitioning || vbTriggered) return;
        if (!v.duration || isNaN(v.duration)) return;
        const timeLeft = v.duration - v.currentTime;
        if (timeLeft <= crossfadeSec) {
          vbTriggered = true;
          vbNext();
        }
      });
    });

    // Erst starten wenn die Sektion sichtbar wird
    let vbStarted = false;
    let vbVisible = false;

    const vbObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        vbVisible = entry.isIntersecting;
        if (entry.isIntersecting) {
          if (!vbStarted) {
            // Erstes Mal sichtbar: Video starten
            vbVideos[0].play().catch(() => {});
            vbStarted = true;
          } else {
            // Wieder sichtbar: aktuelles Video fortsetzen
            vbVideos[vbCurrent].play().catch(() => {});
          }
        } else {
          // Nicht sichtbar: pausieren
          vbVideos[vbCurrent].pause();
        }
      });
    }, { threshold: 0.3 });

    const vbSection = document.getElementById('video-breaker');
    if (vbSection) vbObserver.observe(vbSection);

    // Dot clicks (on parent buttons)
    document.querySelectorAll('[data-vb-dot]').forEach((btn, i) => {
      btn.addEventListener('click', () => vbGoTo(i));
    });
  </script>

  <!-- Stats Bar mit Count-Up -->
  <section class="bg-dark-900 border-y border-white/5" id="stats-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
