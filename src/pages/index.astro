---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
import TrustBar from '../components/TrustBar.astro';
import ServiceCard from '../components/ServiceCard.astro';
import ServiceCardImage from '../components/ServiceCardImage.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import { services } from '../data/services';
import { testimonials } from '../data/testimonials';

const base = import.meta.env.BASE_URL;
const imageServices = services.filter(s => s.image);
const iconServices = services.filter(s => !s.image);
const remainingCount = iconServices.length;
---

<Layout title="Kreuzer Trockenbau & Malerbetrieb – Ihr Handwerker-Team aus dem Bayerischen Wald">

  <!-- Hero Section with Team Photo -->
  <Hero />

  <!-- Regional Trust Bar -->
  <TrustBar />

  <!-- Intro + Services Section (one continuous block) -->
  <section class="pt-14 sm:pt-24 pb-14 sm:pb-24 bg-dark-950">
    <!-- Intro -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mb-14 sm:mb-20">
      <div class="max-w-3xl mx-auto text-center fade-in">
        <h2 class="text-2xl sm:text-3xl md:text-4xl font-bold text-white mb-5 leading-snug font-heading">
          Ihr vertrauenswürdiger Partner im<br/>
          <span class="text-accent-500">Trockenbau und Malerhandwerk</span>
        </h2>
        <p class="text-dark-300 text-base sm:text-lg leading-relaxed">
          Höchste <strong class="text-white font-semibold">Qualität</strong>, <strong class="text-white font-semibold">Sauberkeit</strong> und <strong class="text-white font-semibold">Termintreue</strong> — Komplettlösungen aus einer Hand für Ihr Bauvorhaben.
        </p>
      </div>
    </div>

    <!-- Services -->
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <!-- Section Header with gold underline -->
      <div class="mb-16 fade-in">
        <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4 font-heading">
          Unsere Leistungen
        </h2>
        <div class="h-1 w-16 bg-accent-500 rounded-full mb-5"></div>
        <p class="text-dark-400 max-w-2xl text-lg">
          Von Trockenbau über Malerarbeiten bis hin zu Bodenbelägen — wir bieten Ihnen Komplettlösungen aus einer Hand.
        </p>
      </div>

      <!-- Bento Grid: Image Cards -->
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-5 stagger-children">
        {/* Trockenbau: grosse Karte, 2 Spalten */}
        {imageServices[0] && (
          <a href="/leistungen" class="block lg:col-span-2">
            <ServiceCardImage {...imageServices[0]} large={true} />
          </a>
        )}
        {/* Malerarbeiten: rechts daneben */}
        {imageServices[1] && (
          <a href="/leistungen" class="block">
            <ServiceCardImage {...imageServices[1]} large={true} />
          </a>
        )}
        {/* Bodenbelaege + Fassade + Fliesen-Icon-Karte */}
        {imageServices[2] && (
          <a href="/leistungen" class="block">
            <ServiceCardImage {...imageServices[2]} />
          </a>
        )}
        {imageServices[3] && (
          <a href="/leistungen" class="block">
            <ServiceCardImage {...imageServices[3]} />
          </a>
        )}
        {/* Icon-only Karte fuer die restlichen Leistungen */}
        <a href="/leistungen" class="block">
          <div class="group relative h-[220px] sm:h-[300px] rounded-2xl bg-gradient-to-b from-dark-800/80 to-dark-800/40 border border-white/[0.06] hover:border-accent-500/30 transition-all duration-500 overflow-hidden flex flex-col items-center justify-center text-center p-8">
            <div class="absolute -top-12 -right-12 w-32 h-32 bg-accent-500/10 rounded-full blur-2xl opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
            <div class="relative w-16 h-16 rounded-2xl bg-accent-500/10 border border-accent-500/15 flex items-center justify-center mb-5 group-hover:bg-accent-500/20 group-hover:border-accent-500/30 transition-all duration-500 group-hover:scale-105">
              <svg class="w-8 h-8 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
              </svg>
            </div>
            <span class="relative text-white font-bold text-lg font-heading mb-2 group-hover:text-accent-400 transition-colors duration-300">+{remainingCount} weitere</span>
            <span class="relative text-dark-400 text-sm">Leistungen entdecken</span>
            <div class="relative mt-4 flex items-center gap-2 text-accent-500/0 group-hover:text-accent-500 transition-all duration-500 translate-y-2 group-hover:translate-y-0">
              <span class="text-sm font-medium">Alle ansehen</span>
              <svg class="w-4 h-4 transition-transform group-hover:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3" />
              </svg>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- Breaker: Nach Leistungen -->
  <div class="py-8 sm:py-12 bg-dark-900/50 fade-in relative overflow-hidden">
    <div class="absolute inset-0 opacity-[0.03]" style="background-image: url('data:image/svg+xml,%3Csvg width=%2260%22 height=%2260%22 viewBox=%220 0 60 60%22 xmlns=%22http://www.w3.org/2000/svg%22%3E%3Cg fill=%22none%22 fill-rule=%22evenodd%22%3E%3Cg fill=%22%23ffffff%22 fill-opacity=%221%22%3E%3Cpath d=%22M36 34v-4h-2v4h-4v2h4v4h2v-4h4v-2h-4zm0-30V0h-2v4h-4v2h4v4h2V6h4V4h-4zM6 34v-4H4v4H0v2h4v4h2v-4h4v-2H6zM6 4V0H4v4H0v2h4v4h2V6h4V4H6z%22/%3E%3C/g%3E%3C/g%3E%3C/svg%3E');"></div>
    <div class="relative max-w-4xl mx-auto px-6 sm:px-6 lg:px-8 flex items-center gap-4 sm:gap-8">
      <div class="hidden sm:block flex-1 h-px bg-gradient-to-r from-transparent to-accent-500/30"></div>
      <p class="text-lg sm:text-2xl lg:text-3xl font-heading text-center w-full sm:w-auto">
        <span class="text-white/50">Präzision ist </span><span class="text-white font-bold">unser Handwerk.</span>
      </p>
      <div class="hidden sm:block flex-1 h-px bg-gradient-to-l from-transparent to-accent-500/30"></div>
    </div>
  </div>

  <!-- Stats Bar mit Count-Up -->
  <section class="bg-dark-900 border-y border-white/5" id="stats-section">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 divide-x divide-white/5">
        <div class="flex flex-col items-center justify-center py-8 sm:py-10">
          <div class="text-3xl sm:text-4xl font-bold text-accent-500 mb-1 font-heading">
            <span class="count-up" data-target="15">0</span>+
          </div>
          <p class="text-dark-400 text-sm text-center px-2">Jahre Erfahrung</p>
        </div>
        <div class="flex flex-col items-center justify-center py-8 sm:py-10">
          <div class="text-3xl sm:text-4xl font-bold text-accent-500 mb-1 font-heading">
            <span class="count-up" data-target="2">0</span>
          </div>
          <p class="text-dark-400 text-sm text-center px-2">Fachbetriebe</p>
        </div>
        <div class="flex flex-col items-center justify-center py-8 sm:py-10">
          <div class="text-3xl sm:text-4xl font-bold text-accent-500 mb-1 font-heading">
            Seit 2010
          </div>
          <p class="text-dark-400 text-sm text-center px-2">Regional verwurzelt</p>
        </div>
        <div class="flex flex-col items-center justify-center py-8 sm:py-10">
          <div class="text-3xl sm:text-4xl font-bold text-accent-500 mb-1 font-heading">
            <span class="count-up" data-target="8">0</span>
          </div>
          <p class="text-dark-400 text-sm text-center px-2">Leistungsbereiche</p>
        </div>
      </div>
    </div>
  </section>

  <script>
    // Count-Up Animation
    const counters = document.querySelectorAll('.count-up');
    let counted = false;

    function animateCounters() {
      if (counted) return;
      counted = true;

      counters.forEach((counter) => {
        const target = parseInt(counter.getAttribute('data-target') || '0');
        const duration = 2000;
        const steps = 60;
        const increment = target / steps;
        let current = 0;
        let step = 0;

        const timer = setInterval(() => {
          step++;
          // Ease-out: schnell am Anfang, langsamer am Ende
          const progress = 1 - Math.pow(1 - step / steps, 3);
          current = Math.round(target * progress);
          counter.textContent = current.toString();

          if (step >= steps) {
            counter.textContent = target.toString();
            clearInterval(timer);
          }
        }, duration / steps);
      });
    }

    const statsObserver = new IntersectionObserver((entries) => {
      entries.forEach((entry) => {
        if (entry.isIntersecting) {
          animateCounters();
        }
      });
    }, { threshold: 0.3 });

    const statsSection = document.getElementById('stats-section');
    if (statsSection) statsObserver.observe(statsSection);
  </script>

