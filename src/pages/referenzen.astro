---
import Layout from '../layouts/Layout.astro';
import { testimonials } from '../data/testimonials';
import { projects, categories } from '../data/projects';
const base = import.meta.env.BASE_URL;
---

<Layout
  title="Referenzen – Kreuzer Trockenbau & Malerbetrieb"
  description="Kundenstimmen, Bauprojekte und Referenzen von Kreuzer Trockenbau & Malerbetrieb."
>
  <!-- Page Header -->
  <section class="pt-36 pb-20 sm:pt-44 sm:pb-28 bg-dark-950 relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-accent-500/5 rounded-full blur-3xl">
    </div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="text-accent-500 text-sm font-medium uppercase tracking-widest fade-in">Unsere Arbeit</span>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-light text-white mt-4 mb-6 fade-in font-heading tracking-tight">
        Referenzen
      </h1>
      <p class="text-dark-400 text-lg max-w-2xl mx-auto fade-in leading-relaxed">
        Wir sind besonders stolz auf unseren größten Erfolg: unsere vielen zufriedenen Kunden.
      </p>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-20 sm:py-32 lg:py-40 bg-dark-950 relative overflow-hidden">
    <!-- Decorative glows -->
    <div class="absolute -top-32 -right-32 w-[500px] h-[500px] bg-accent-500/[0.03] rounded-full blur-3xl"></div>
    <div class="absolute -bottom-48 -left-24 w-[400px] h-[400px] bg-accent-500/[0.02] rounded-full blur-3xl"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12 sm:mb-16 fade-in">
        <h2 class="text-3xl sm:text-4xl font-light text-white mb-5 font-heading tracking-tight">Kundenstimmen</h2>
        <div class="h-0.5 w-16 bg-accent-500 rounded-full mb-6"></div>
        <p class="text-dark-400 text-lg leading-relaxed">Was unsere Kunden über unsere Arbeit sagen.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 stagger-children">
        {
          testimonials.map((testimonial) => (
            <div class="relative p-8 sm:p-10 rounded-2xl bg-dark-800/30 border border-white/[0.03] hover:border-white/[0.06] transition-all duration-700 group">
              {/* Star Rating */}
              <div class="flex items-center gap-1 mb-4" role="img" aria-label="5 von 5 Sternen">
                {[1, 2, 3, 4, 5].map(() => (
                  <svg class="w-4 h-4 text-accent-500" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                ))}
              </div>

              {/* Quote */}
              <p class="text-dark-200 text-sm sm:text-base leading-relaxed mb-6 italic">
                &ldquo;{testimonial.text}&rdquo;
              </p>

              {/* Author */}
              <div class="flex items-center gap-3 pt-4 border-t border-white/5">
                <div class="w-10 h-10 rounded-full bg-accent-500/15 flex items-center justify-center">
                  <span class="text-accent-500 font-semibold text-sm">{testimonial.name.charAt(0)}</span>
                </div>
                <div>
                  <p class="text-white font-medium text-sm">{testimonial.name}</p>
                  <p class="text-dark-400 text-xs">{testimonial.role}</p>
                </div>
              </div>
            </div>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Unsere Projekte — Kategorie-Widgets -->
  <section class="py-20 sm:py-32 lg:py-40 bg-dark-900 relative overflow-hidden">
    <!-- Decorative glows -->
    <div class="absolute top-1/4 -right-48 w-[600px] h-[600px] bg-accent-500/[0.03] rounded-full blur-3xl"></div>
    <div class="absolute bottom-1/4 -left-48 w-[500px] h-[500px] bg-accent-500/[0.02] rounded-full blur-3xl"></div>
    <div class="absolute inset-x-0 top-0 h-32 bg-gradient-to-b from-dark-950 to-transparent"></div>
    <div class="absolute inset-x-0 bottom-0 h-32 bg-gradient-to-t from-dark-950 to-transparent"></div>

    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12 sm:mb-16 fade-in">
        <h2 class="text-3xl sm:text-4xl font-light text-white mb-5 font-heading tracking-tight">Unsere Projekte</h2>
        <div class="h-0.5 w-16 bg-accent-500 rounded-full mb-6"></div>
        <p class="text-dark-400 text-lg leading-relaxed">Eine Auswahl unserer realisierten Projekte und zufriedenen Kunden.</p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 stagger-children">
        {categories.map((cat) => {
          const catProjects = projects.filter((p) => p.category === cat.name);
          return (
            <div class="rounded-2xl overflow-hidden border border-white/[0.03] hover:border-white/[0.06] transition-all duration-700 group bg-dark-800/30">
              {/* Image with centered title */}
              <div class="relative h-[220px] sm:h-[250px] overflow-hidden">
                <img
                  src={`${base}${cat.image}`}
                  alt={cat.name}
                  class="w-full h-full object-cover transition-transform duration-1000 ease-out group-hover:scale-[1.05]"
                  loading="lazy"
                />
                <div class="absolute inset-0 bg-dark-950/50"></div>
                <div class="absolute inset-0 flex flex-col items-center justify-center text-center px-6">
                  <h3 class="text-white text-3xl sm:text-4xl font-heading font-light tracking-wide drop-shadow-[0_0_25px_rgba(255,255,255,0.15)]">{cat.name}</h3>
                  <span class="text-accent-500 text-xs font-heading font-medium uppercase tracking-[0.2em] mt-3 drop-shadow-[0_0_10px_rgba(201,122,66,0.3)]">
                    {catProjects.length} {catProjects.length === 1 ? 'Projekt' : 'Projekte'}
                  </span>
                </div>
              </div>

              {/* Client list */}
              <div class="p-5 sm:p-6">
                <div class="space-y-2.5">
                {catProjects.map((project) => (
                  <div class="flex items-center gap-2.5">
                    <svg class="w-3.5 h-3.5 text-accent-500/60 shrink-0" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                      <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75L11.25 15 15 9.75M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                    <span class="text-dark-300 text-sm">{project.client}<span class="text-dark-500">, {project.location}</span></span>
                  </div>
                ))}
                </div>
              </div>
            </div>
          );
        })}
      </div>

      {/* Footer note */}
      <div class="mt-8 text-center">
        <p class="text-dark-500 text-sm italic">Sowie zahlreiche weitere private Bauprojekte in der Region.</p>
      </div>
    </div>
  </section>
</Layout>
