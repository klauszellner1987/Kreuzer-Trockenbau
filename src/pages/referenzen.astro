---
import Layout from '../layouts/Layout.astro';
import TestimonialCard from '../components/TestimonialCard.astro';
import { testimonials } from '../data/testimonials';
import { projectCategories, referenceClients } from '../data/projects';
---

<Layout title="Referenzen – Kreuzer Trockenbau & Malerbetrieb" description="Kundenstimmen, Bauprojekte und Referenzen von Kreuzer Trockenbau & Malerbetrieb.">

  <!-- Page Header -->
  <section class="pt-32 pb-16 sm:pt-40 sm:pb-20 bg-dark-950 relative overflow-hidden">
    <div class="absolute top-0 left-1/2 -translate-x-1/2 w-[600px] h-[400px] bg-accent-500/5 rounded-full blur-3xl"></div>
    <div class="relative z-10 max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <span class="text-accent-500 text-sm font-medium uppercase tracking-widest fade-in">Unsere Arbeit</span>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-white mt-3 mb-6 fade-in font-heading">Referenzen</h1>
      <p class="text-dark-300 text-lg max-w-2xl mx-auto fade-in">
        Wir sind besonders stolz auf unseren größten Erfolg: unsere vielen zufriedenen Kunden.
      </p>
    </div>
  </section>

  <!-- Testimonials -->
  <section class="py-16 sm:py-24 bg-dark-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12 fade-in">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 font-heading">Kundenstimmen</h2>
        <p class="text-dark-400 text-lg">Was unsere Kunden über unsere Arbeit sagen.</p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6 stagger-children">
        {testimonials.map((testimonial) => (
          <TestimonialCard {...testimonial} />
        ))}
      </div>
    </div>
  </section>

  <!-- Project Categories -->
  <section class="py-16 sm:py-24 bg-dark-900">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12 fade-in">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 font-heading">Bauprojekte</h2>
        <p class="text-dark-400 text-lg">Auszug unserer realisierten Projektbereiche.</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-5 stagger-children">
        {projectCategories.map((project) => (
          <div class="p-6 rounded-2xl bg-dark-800/50 border border-white/5 hover:border-accent-500/20 transition-all duration-300 hover:-translate-y-1 group">
            <div class="w-12 h-12 rounded-xl bg-accent-500/10 flex items-center justify-center mb-4 group-hover:bg-accent-500/20 transition-colors">
              <svg class="w-6 h-6 text-accent-500" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 21h19.5m-18-18v18m10.5-18v18m6-13.5V21M6.75 6.75h.75m-.75 3h.75m-.75 3h.75m3-6h.75m-.75 3h.75m-.75 3h.75M6.75 21v-3.375c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21M3 3h12m-.75 4.5H21m-3.75 7.5h.008v.008h-.008v-.008zm0 3h.008v.008h-.008v-.008z" />
              </svg>
            </div>
            <h3 class="text-white font-medium text-sm">{project}</h3>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Reference List -->
  <section class="py-16 sm:py-24 bg-dark-950">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="mb-12 fade-in">
        <h2 class="text-2xl sm:text-3xl font-bold text-white mb-4 font-heading">Referenzliste</h2>
        <p class="text-dark-400 text-lg">Eine Auswahl unserer zufriedenen Kunden und Partner.</p>
      </div>

      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4 stagger-children">
        {referenceClients.map((client) => (
          <div class="flex items-center gap-3 p-4 rounded-xl bg-dark-800/30 border border-white/5 hover:border-white/10 transition-colors">
            <div class="w-2 h-2 rounded-full bg-accent-500 shrink-0"></div>
            <span class="text-dark-300 text-sm">{client}</span>
          </div>
        ))}
      </div>
    </div>
  </section>

</Layout>
