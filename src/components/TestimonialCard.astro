---
interface Props {
  name: string;
  role: string;
  text: string;
}

const { name, role, text } = Astro.props;
---

<div
  class="p-8 sm:p-10 rounded-2xl bg-dark-800/30 border border-white/[0.03] hover:border-white/[0.06] transition-all duration-700"
>
  <!-- Quote icon -->
  <svg class="w-8 h-8 text-accent-500/40 mb-4" viewBox="0 0 24 24" fill="currentColor">
    <path
      d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"
    ></path>
  </svg>
  <p class="text-dark-200 text-sm sm:text-base leading-relaxed mb-6 italic">
    &ldquo;{text}&rdquo;
  </p>
  <div class="flex items-center gap-3">
    <div class="w-10 h-10 rounded-full bg-accent-500/20 flex items-center justify-center">
      <span class="text-accent-500 font-semibold text-sm">{name.charAt(0)}</span>
    </div>
    <div>
      <p class="text-white font-medium text-sm">{name}</p>
      <p class="text-dark-400 text-xs">{role}</p>
    </div>
  </div>
</div>
