  <!-- Floating Button -->
  <a
    href={whatsappUrl}
    target="_blank"
    rel="noopener noreferrer"
    id="wa-btn"
    class="relative flex items-center"
    aria-label="Ãœber WhatsApp kontaktieren"
  >
    <!-- Notification Badge -->
    <span
      id="wa-badge"
      class="absolute -top-1.5 -right-1.5 w-5.5 h-5.5 bg-gradient-to-br from-red-400 to-red-600 rounded-full flex items-center justify-center text-white text-[10px] font-bold z-10 shadow-lg shadow-red-500/30 opacity-0 scale-0 transition-all duration-300"
