        ></path>
      </svg>
    </div>
  </a>
</div>

<style>
  @keyframes wa-ping {
    0% {
      transform: scale(1);
      opacity: 0.35;
    }
    75%,
    100% {
      transform: scale(1.8);
      opacity: 0;
    }
  }

  .animate-wa-ping {
    animation: wa-ping 2s cubic-bezier(0, 0, 0.2, 1) infinite;
  }
</style>

<script>
  const widget = document.getElementById('wa-widget');
  const bubble = document.getElementById('wa-bubble');
  const badge = document.getElementById('wa-badge');
  const closeBtn = document.getElementById('wa-bubble-close');
  const waBtn = document.getElementById('wa-btn');

  let bubbleOpen = false;
  let bubbleDismissed = false;
  let widgetVisible = false;
  let bubbleShownOnce = false;
  let lastScroll = 0;

  // Widget ein-/ausblenden
  function showWidget() {
    if (widgetVisible) return;
    widgetVisible = true;
    widget?.classList.remove('opacity-0', 'translate-y-8', 'pointer-events-none');
    widget?.classList.add('opacity-100', 'translate-y-0');

    // Bubble beim ersten Einblenden nach kurzer VerzÃ¶gerung zeigen
    if (!bubbleShownOnce && !bubbleDismissed) {
      bubbleShownOnce = true;
      setTimeout(() => {
        if (!bubbleDismissed && widgetVisible) {
          badge?.classList.remove('opacity-0', 'scale-0');
          badge?.classList.add('opacity-100', 'scale-100');
          setTimeout(() => {
            if (!bubbleDismissed && widgetVisible) {
              bubbleOpen = true;
              bubble?.classList.remove('opacity-0', 'translate-y-4');
              bubble?.classList.add('opacity-100', 'translate-y-0');
            }
          }, 800);
        }
      }, 1500);
    }
  }

  function hideWidget() {
    if (!widgetVisible) return;
    widgetVisible = false;
    widget?.classList.add('opacity-0', 'translate-y-8', 'pointer-events-none');
    widget?.classList.remove('opacity-100', 'translate-y-0');
    if (bubbleOpen) closeBubble();
  }

  // Bubble schlieÃŸen
  function closeBubble() {
    bubbleDismissed = true;
    bubbleOpen = false;
    bubble?.classList.add('opacity-0', 'translate-y-4');
    bubble?.classList.remove('opacity-100', 'translate-y-0');
    badge?.classList.add('opacity-0', 'scale-0');
    badge?.classList.remove('opacity-100', 'scale-100');
  }

  closeBtn?.addEventListener('click', (e) => {
    e.preventDefault();
    e.stopPropagation();
    closeBubble();
  });

  // Toggle Bubble beim Klick auf den Button
  waBtn?.addEventListener('click', (e) => {
    if (!bubbleOpen && !bubbleDismissed) {
      e.preventDefault();
      bubbleOpen = true;
      bubble?.classList.remove('opacity-0', 'translate-y-4');
      bubble?.classList.add('opacity-100', 'translate-y-0');
      badge?.classList.add('opacity-0', 'scale-0');
      badge?.classList.remove('opacity-100', 'scale-100');
    }
  });

  // Smartes Scroll-Verhalten
  const heroThreshold = window.innerHeight * 0.7; // Am Hero vorbei

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;
    const scrollingUp = currentScroll < lastScroll;
    const pastHero = currentScroll > heroThreshold;

    // Kontakt-Bereich erkennen (letzte Section vor Footer)
    const footer = document.querySelector('footer');
    const footerTop = footer?.getBoundingClientRect().top ?? Infinity;
    const nearFooter = footerTop < window.innerHeight + 200;

    // Logik: Zeigen wenn am Hero vorbei UND (hochscrollt ODER gerade erst am Hero vorbei)
    // Verstecken wenn im Kontakt/Footer-Bereich oder ganz oben
    if (!pastHero || nearFooter) {
      hideWidget();
    } else if (scrollingUp || (pastHero && !widgetVisible)) {
      showWidget();
    }

    // Bubble beim Scrollen schlieÃŸen
    if (bubbleOpen && Math.abs(currentScroll - lastScroll) > 50) {
      closeBubble();
    }

    lastScroll = currentScroll;
  });
</script>
