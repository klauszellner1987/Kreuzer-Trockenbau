    <!-- Pulse Ring -->
    <div class="absolute inset-0 rounded-full bg-[#25D366]/30 animate-wa-ping"></div>

    <!-- Icon -->
    <div
      class="relative w-[62px] h-[62px] bg-gradient-to-br from-[#25D366] via-[#22C55E] to-[#128C7E] hover:from-[#20BD5A] hover:to-[#0F7B6E] rounded-full flex items-center justify-center shadow-xl shadow-[#25D366]/20 hover:shadow-2xl hover:shadow-[#25D366]/30 transition-all duration-300 hover:scale-110 active:scale-95"
